{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "moduleResolution": "Node",
    "jsx": "React",
    // baseUrl and paths allow us to add ad-hoc definitions for third-party libraries
    "baseUrl": ".",
    "paths": {
      "*": ["*", "typings/*"]
    },
    // We include ES6 because react uses Map from ES6
    "lib": ["ES5", "ES6"],
    // Strictness
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Smaller bundle
    "importHelpers": true,
    // Spec compliance
    "downlevelIteration": true
  }
}
